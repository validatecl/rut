{
  "compilerOptions": {
    "esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "strict": false,
    "module": "CommonJS",
    "target": "ESNext",
    "outDir": "lib",
    "lib": ["ESNext"]
  },
  "exclude": ["test/**/*.spec.ts"],
  "include": ["src/**/*.ts"]
}
